<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#870b2d"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.shyam.bloodlife.SignUp">

    <TextView
        android:text="SignUp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:id="@+id/textView" />




    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginStart="58dp"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/namesignup"
     />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:inputType="textPersonName"
        android:hint="State"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/statesignup"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="City"
        android:layout_marginStart="58dp"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/citysignup"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="PinCode"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:layout_marginStart="58dp"
        android:id="@+id/pincodesignup"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginStart="58dp"
        android:hint="Blood Group"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/bloodgroupsignup"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:inputType="textPersonName"
        android:hint="Mobile NO."
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/mobilenosignup"
        />

    <Button
        android:text="Signup"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonsignup" />


</LinearLayout>
